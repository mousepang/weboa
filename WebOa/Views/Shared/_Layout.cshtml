<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 神秘的大屌</title>
    <!--基础样式文件-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!--基础JS文件-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <!--使用bootstrapTable需要这三个文件-->
    <link href="~/lib/bootstrap-table/src/bootstrap-table.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-table/src/bootstrap-table.js"></script>
    <script src="~/lib/bootstrap-table/src/locale/bootstrap-table-zh-CN.js"></script>
    <!--ajax的文件-->
    <script src="~/lib/ajax/dist/ajax.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/src/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-area="" asp-controller="Kucun" asp-action="Index" class="navbar-brand">主页</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a asp-area="" asp-controller="Kucun" asp-action="Index">库存</a></li>
                        <li><a asp-area="" asp-controller="KucunOut" asp-action="Index">取钱记录</a></li>
                    </ul>
                        @*@await Html.PartialAsync("_LoginPartial")*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - WebOa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
